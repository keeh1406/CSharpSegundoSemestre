            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteId)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
       <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantidadeProduto)
            </td>
        <td >
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
        <td >
                @Html.DisplayFor(modelItem => item.DataVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdutoId)
            </td>
           <td>
               @Html.DisplayFor(modelItem => item.ClienteId)
           </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.VendaId }) |
                @Html.ActionLink("Details", "Details", new { id = item.VendaId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.VendaId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
